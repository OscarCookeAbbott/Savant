{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "skipLibCheck": true,

        /* Bundler mode */
        "moduleResolution": "bundler",
        "isolatedModules": true,
        "moduleDetection": "force",
        "declaration": true,
        "emitDeclarationOnly": false,
        "outDir": "dist",
        "noEmit": false,

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedSideEffectImports": true,

        "baseUrl": ".",
        "paths": {
            "@savant/core": ["packages/core/dist"],
            "@savant/routing": ["packages/routing/dist"],
            "@savant/components": ["packages/components/dist"]
        },
        "types": ["vite/client"]
    },
    "include": [
        "src/**/*",
        "packages/components/src/scripts/prism.js",
        "packages/components/src/scripts/prism.d.ts",
        "packages/core/src/converter.ts",
        "packages/core/src/index.ts",
        "packages/core/src/utils.ts",
        "packages/docs"
    ]
}
